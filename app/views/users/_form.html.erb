<%# Using Rails' #form_with method and UserController#new with an instance variable %>
<%= form_with model: user do |form| %>
  <%= form.label(:username, 'Username') %><br/>
  <%= form.text_field(:username) %>
  <% if user.errors[:username].any? %>
    <span class='user_error'> <%= user.errors[:username].first %> </span><br/>
  <% end %><br/>
  <%= form.label(:email, 'Email') %><br/>
  <%= form.text_field(:email, placeholder: 'some@email.com') %><br/>
  <% if user.errors[:email].any? %>
    <span class='user_error'> <%= user.errors[:email].first %> </span><br/>
  <% end %><br/>
  <%= form.label(:password, 'Password') %><br/>
  <%= form.password_field(:password) %><br/>
  <% if user.errors[:password].any? %>
    <span class='user_error'> <%= user.errors[:password].first %> </span><br/>
  <% end %><br/>
  <%= form.submit %><br/>
<% end %>
<%# The 'user_error' class is added for illustrative purposes only %>